{
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "lib": ["DOM", "esnext"],
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "experimentalDecorators": true,
        "resolveJsonModule": true
    },
}